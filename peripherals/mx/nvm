
PERIPHERAL ${rpn ${BASE} 0x00 +} NVM
REG ${rpn ${BASE} 0x00 +} NVMCON CLR SET INV
BIT 31-16   UNUSED
BIT 15      WR
BIT 14      WREN
BIT 13      WRERR
BIT 12      LVDERR
BIT 11      LVDSTAT
BIT 10-4    UNUSED
BIT 3-0     NVMOP

REG ${rpn ${BASE} 0x10 +} NVMKEY
BIT 31-0    NVMKEY

REG ${rpn ${BASE} 0x20 +} NVMADDR CLR SET INV
BIT 31-0    NVMADDR

REG ${rpn ${BASE} 0x30 +} NVMDATA
BIT 31-0    NVMDATA

REG ${rpn ${BASE} 0x40 +} NVMSRCADDR
BIT 31-0    NVMSRCADDR

