
PERIPHERAL +{${BASE},00} TMR${INDEX}
REG +{${BASE},00} T${INDEX}CON CLR SET INV
BIT 31-16   UNUSED
BIT 15      ON
BIT 14      UNUSED
BIT 13      SIDL
BIT 12-8    UNUSED
BIT 7       TGATE
BIT 6-4     TCKPS
BIT 3       T32
BIT 2       UNUSED
BIT 1       TCS
BIT 0       UNUSED

REG +{${BASE},10} TMR${INDEX} CLR SET INV
BIT 31-16   UNUSED
BIT 15-0    TMR${INDEX}

REG +{${BASE},20} PR${INDEX} CLR SET INV
BIT 31-16   UNUSED
BIT 15-0    PR${INDEX}

