
PERIPHERAL ${BASE+60} DMAC${INDEX}
REG ${BASE+00} DCH${INDEX}CON CLR SET INV
BIT 31-16   UNUSED
BIT 15      CHBUSY
BIT 14-9    UNUSED
BIT 8       CHCHNS
BIT 7       CHEN
BIT 6       CHAED
BIT 5       CHCHN
BIT 4       CHAEN
BIT 3       UNUSED
BIT 2       CHEDET
BIT 1-0     CHPRI

REG ${BASE+10} DCH${INDEX}ECON CLR SET INV
BIT 31-24   UNUSED
BIT 23-16   CHAIRQ
BIT 15-8    CHSIRQ
BIT 7       CFORCE
BIT 6       CABORT
BIT 5       PATEN
BIT 4       SIRQEN
BIT 3       AIRQEN
BIT 2-0     UNUSED

REG ${BASE+20} DCH${INDEX}INT CLR SET INV
BIT 31-24   UNUSED
BIT 23      CHSDIE
BIT 22      CHSHIE
BIT 21      CHDDIE
BIT 20      CHDHIE
BIT 19      CHBCIE
BIT 18      CHCCIE
BIT 17      CHTAIE
BIT 16      CHERIE
BIT 15-8    UNUSED
BIT 7       CHSDIF
BIT 6       CHSHIF
BIT 5       CHDDIF
BIT 4       CHDHIF
BIT 3       CHBCIF
BIT 2       CHCCIF
BIT 1       CHTAIF
BIT 0       CHERIF

REG ${BASE+30} DCH${INDEX}SSA CLR SET INV
BIT 31-0    CHSSA

REG ${BASE+40} DCH${INDEX}DSA CLR SET INV
BIT 31-0    CHDSA

REG ${BASE+50} DCH${INDEX}SSIZ CLR SET INV
BIT 31-16   UNUSED
BIT 15-0    CHSSIZ

REG ${BASE+60} DCH${INDEX}DSIZ CLR SET INV
BIT 31-16   UNUSED
BIT 15-0    CHDSIZ

REG ${BASE+70} DCH${INDEX}SPTR CLR SET INV
BIT 31-16   UNUSED
BIT 15-0    CHSPTR

REG ${BASE+80} DCH${INDEX}DPTR CLR SET INV
BIT 31-16   UNUSED
BIT 15-0    CHDPTR

REG ${BASE+90} DCH${INDEX}CSIZ CLR SET INV
BIT 31-16   UNUSED
BIT 15-0    CHCSIZ

REG ${BASE+A0} DCH${INDEX}CPTR CLR SET INV
BIT 31-16   UNUSED
BIT 15-0    CHCPTR

REG ${BASE+B0} DCH${INDEX}DAT CLR SET INV
BIT 31-8    UNUSED
BIT 7-0     CHPDAT

