# Add SQI1 to the start of all register names
PREFIX SQI1

PERIPHERAL ${BASE} SQI

REG ${BASE} XCON1
BIT 23-21   DUMMYBYTES
BIT 20-18   ADDRBYTES
BIT 17-10   READOPCODE
BIT 9-8     TYPEDATA
BIT 7-6     TYPEDUMMY
BIT 5-4     TYPEMODE
BIT 3-2     TYPEADDR
BIT 1-0     TYPECMD

REG +{${BASE},4} XCON2
BIT 11-10   DEVSEL
BIT 9-8     MODEBYTES
BIT 7-0     MODECODE

REG +{${BASE},8} CFG
