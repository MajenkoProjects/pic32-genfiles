PERIPHERAL ${BASE} DEADMAN_TIMER

REG ${BASE} DMTCON
BIT 15      ON

REG +{${BASE},10} DMTPRECLR
BIT 15-8    STEP1

REG +{${BASE},20} DMTCLR
BIT 7-0     STEP2

REG +{${BASE},30} DMSTAT
BIT 7       BAD1
BIT 6       BAD2
BIT 5       DMTEVENT
BIT 0       WINOPN

REG +{${BASE},40} DMTCNT
BIT 31-0    COUNTER

REG +{${BASE},60} DMTPSCNT
BIT 31-0    PSCNT

REG +{${BASE},70} DMTPSINTV
BIT 31-0    PSINTV
