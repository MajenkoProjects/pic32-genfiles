PERIPHERAL ${BASE} DEADMAN_TIMER

REG ${BASE} DMTCON
BIT 15      ON

REG ${rpn ${BASE} 0x10 +} DMTPRECLR
BIT 15-8    STEP1

REG ${rpn ${BASE} 0x20 +} DMTCLR
BIT 7-0     STEP2

REG ${rpn ${BASE} 0x30 +} DMSTAT
BIT 7       BAD1
BIT 6       BAD2
BIT 5       DMTEVENT
BIT 0       WINOPN

REG ${rpn ${BASE} 0x40 +} DMTCNT
BIT 31-0    COUNTER

REG ${rpn ${BASE} 0x60 +} DMTPSCNT
BIT 31-0    PSCNT

REG ${rpn ${BASE} 0x70 +} DMTPSINTV
BIT 31-0    PSINTV
